{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lumynus Luma Directives",
  "scopeName": "luma.directives",
  "injectionSelector": "L:text.html.derivative | L:text.html.basic | L:source.php",
  "patterns": [
    {
      "include": "#directives"
    }
  ],
  "repository": {
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.luma",
          "match": "@(if|elseif|else|endif|for|endfor|foreach|endforeach|while|endwhile|switch|case|default|break|endswitch|include|use)\\b"
        },
        {
          "name": "entity.name.tag.luma",
          "match": "@(include|use|js|css|header:js|header:css|selected|checked)\\b"
        }
      ]
    }
  }
}
