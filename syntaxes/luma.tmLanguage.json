{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lumynus Luma",
  "scopeName": "text.html.luma",
  "injectionSelector": "L:text.html.basic, L:text.html.php, L:source.php",
  "patterns": [
    { "include": "#control-statements" },
    { "include": "#directives" },
    { "include": "text.html.basic" }
  ],
  "repository": {
    "control-statements": {
      "patterns": [
        {
          "name": "keyword.control.luma",
          "match": "@(if|elseif|else|endif|for|endfor|foreach|endforeach|while|endwhile|switch|case|default|break|endswitch|exist|endexist|not|endnot)\\b"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "entity.name.tag.luma",
          "match": "@(include|use|js|css|header:js|header:css|selected|checked)\\b"
        }
      ]
    }
  }
}