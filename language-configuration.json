{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },

  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],

  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],

  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],

  "folding": {
    "markers": {
      "start": "^\\s*(@luma:(if|foreach|section)|\\{)",
      "end": "^\\s*(@luma:(endif|endforeach|endsection)|\\})"
    }
  }
}
