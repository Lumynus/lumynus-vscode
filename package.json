{
  "name": "lumynus-luma",
  "displayName": "Lumynus Luma Support",
  "description": "Suporte a sintaxe Luma para o framework Lumynus",
  "version": "1.0.0",
  "publisher": "Lumynus",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumynus/lumynus-vscode.git"
  },
  "contributes": {
    "languages": [
      {
        "id": "luma",
        "aliases": [
          "Luma",
          "luma"
        ],
        "extensions": [
          ".luma",
          ".php",
          ".html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luma",
        "scopeName": "text.html.php.luma",
        "path": "./syntaxes/luma.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "lumynus-luma-icons",
        "label": "Lumynus Luma Icons",
        "path": "./icons/luma-icon-theme.json"
      }
    ]
  }
}
