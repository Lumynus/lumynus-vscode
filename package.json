{
  "name": "lumynus-luma",
  "displayName": "Lumynus Luma Support",
  "version": "1.0.28",
  "publisher": "Lumynus",
  "icon": "./resources/logo.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "luma",
        "aliases": [
          "Luma",
          "luma"
        ],
        "extensions": [
          ".luma"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "luma",
        "scopeName": "text.html.luma",
        "path": "./syntaxes/luma-base.tmLanguage.json"
      },
      {
        "scopeName": "luma.directives",
        "path": "./syntaxes/luma.tmLanguage.json",
        "injectTo": [
          "text.html.derivative",
          "text.html.basic",
          "text.html.luma",
          "text.html.php",
          "source.php"
        ]
      }
    ]
  }
}
