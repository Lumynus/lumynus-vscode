{
  "name": "lumynus-luma",
  "displayName": "Lumynus Luma Support",
  "version": "1.0.6",
  "contributes": {
    "languages": [
      {
        "id": "luma",
        "aliases": ["Luma", "luma"],
        "extensions": [".luma"], 
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "text.html.luma",
        "path": "./syntaxes/luma.tmLanguage.json",
        "injectTo": [
          "text.html.basic",
          "text.html.php",
          "source.php"
        ]
      }
    ]
  }
}